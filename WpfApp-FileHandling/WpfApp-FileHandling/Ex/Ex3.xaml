<UserControl x:Class="WpfApp_FileHandling.Ex.Ex3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_FileHandling.Ex"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <Button Content="Write Multiple Lines to File" Width="200" Click="WriteLinesButton_Click" />
            <TextBlock Name="FileWriteStatusTextBlock" Margin="0,10,0,0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
